<div class="user">
  <div class="buttons">
    <% if signed_in? && current_user.admin? && !user.admin? %>
      <div class="delete_button">
        <%= link_to "Ã—", user, :method => :delete, :confirm => t(:confirm_delete_message), :title => "#{t(:delete)} #{user.username}?" %>
      </div>
    <% end %>
  </div>
  
  <div class="user_info">
    <a href="<%= user_path(user) %>">
      <div class="avatar">
        <%= gravatar_for user %>
      </div>
      
      <div class="user_fields">
        <div class="user_name"><%= user.name %></div>
        <span class="user_username"><%= user.username %></span>
        <div class="post_count"><%= pluralize(user.posts.count, t(:_post)) %></div>
      </div>
    </a>
    
    <div class="user_relations">
      <%= render "relationships/following", :user => user %>
      <%= render "relationships/followers", :user => user %>
      <%= render "relationships/follow_form", :user => user %>
    </div>
    
    <div class="clear"></div>
  </div>
  
  <div class="clear"></div>
</div>

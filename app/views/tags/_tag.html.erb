<% unless tag.nil? %>
  <div id="<%= "post_#{local_assigns[:post].id}" unless local_assigns[:post].nil? %>tag_<%= tag.id %>" class="tag">
    <% if local_assigns[:show_checkboxes] %>
      <%= render "user_tags/follow_form", :tag => tag %>
    <% end %>
    
    <%= link_to tag.name, tag %>
    <% if !current_user.nil? %>
      <% if local_assigns[:post].nil? or current_user.posts.include?(local_assigns[:post]) %>
        <% if local_assigns[:show_untag_all] %>
          <%= link_to "Ã—", tag_path(:id => tag.name, :untag => "all"), :method => :delete, :confirm => t(:confirm_untag_all_message) % { :tag => tag.name } %>
        <% end %>
        
        <% if local_assigns[:show_untag] %>
          <%= link_to "Ã—", tag_path(:id => tag.name, :untag => "post", :post_id => local_assigns[:post].id), :method => :delete, :post_id => local_assigns[:post].id, :onclick => "$('#post_#{local_assigns[:post].id}_tag_#{tag.id}').remove();", :remote => true %>
        <% end %>
      <% else %>
        <%= link_to "+", tag_path(:id => tag.name, :untag => "post"), :method => :delete, :confirm => t(:confirm_untag_all_message) % { :tag => tag.name } %>
      <% end %>
    <% end %>
  </div>
<% end %>

    <% if local_assigns[:show_checkboxes] %>
      <%= render "user_tags/follow_form", :tag => tag %>
    <% end %>
    
    <div class="tag_name">
      <%= link_to tag.name, tag %>
    </div>
    
    <% if local_assigns[:show_untag_all] %>
      <%= link_to "Ã—", tag_path(:id => tag.name, :untag => "all"), :method => :delete, :confirm => t(:confirm_untag_all_message) % { :tag => tag.name } %>
    <% end %>
    
    <div class="clear"></div>
  </div>
<% end %>

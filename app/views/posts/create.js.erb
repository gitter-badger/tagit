<% unless @post.nil? %>
  $('#filtered_stream').prepend('<%= escape_javascript(render "posts/post", :post => @post) %>');
  $('#post_<%= @post.id %>').toggle(false).animate({ height: 'toggle' }, ANIMATION_DURATION);
  $('#new_post').find('input, textarea').each(function() { $(this).val(''); })
<% end %>

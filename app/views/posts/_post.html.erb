<div class="post_item">
  <%= link_to gravatar_for(post.user, :size => 50), post.user %>
  
  <div class="buttons">
    <% if current_user?(post.user) %>
    <div class="delete_button">
      <%= link_to "Ã—", post, :method => :delete, :confirm => t(:confirm_delete_message) %>
    </div>
    <% end %>
  </div>
  
  <div class="post">
    <span class="user"><%= link_to post.user.name, post.user %></span>
    <span class="timestamp"><%= t(:posted_message) % { :time => time_ago_in_words(post.created_at) } %></span>
    <% unless post.title.blank? %>
      <div class="title"><%= post.title %></div>
    <% end %>
    <div class="content"><%= wrap_and_trunc(post.content) %></div>
  </div>
  
  <div class="clear"></div>
</div>

<%= form_for @post do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
  
  <div class="title">
    <%= f.text_field :title, :placeholder => t(:title), :class => (current_user.settings.hide_user_profile == "true" ? "input_expanded" : "") %>
  </div>
  
  <div class="tags">
    <%= f.text_field :tag_list, :placeholder => t(:tag_list_placeholder), :class => (current_user.settings.hide_user_profile == "true" ? "input_expanded" : "") %>
  </div>
  
  <div class="clear"></div>
  
  <div class="content">
    <%= f.text_area :content, :placeholder => t(:new_post_message), :class => "expand50-275 " + (current_user.settings.hide_user_profile == "true" ? "textarea_expanded" : "") %>
  </div>
  
  <div class="actions">
    <%= f.submit t(:post_verb) %>
  </div>
  
  <div class="clear"></div>
<% end %>

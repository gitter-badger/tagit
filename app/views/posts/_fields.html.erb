<%= form_for @post do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  
  <h1 class="post"><%= t(:new_post_message) %></h1>
  
  <div class="field">
    <%= f.label t(:title) %>
    <br />
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label t(:tag).pluralize %>
    <br />
    <%= f.text_field :tag_list %>
  </div>
  
  <div class="field">
    <%= f.label t(:text) %>
    <br />
    <%= f.text_area :content %>
  </div>
  
  <div class="actions">
    <%= f.submit t(:post_verb) %>
  </div>
<% end %>

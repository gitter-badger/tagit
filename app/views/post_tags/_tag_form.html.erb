<% if !current_user.nil? %>
  <% if local_assigns[:post].nil? %>
    <% if local_assigns[:show_untag_all] %>
      <%= link_to "Ã—", tag_path(:id => tag.name, :untag => "all"), :method => :delete, :confirm => t(:confirm_untag_all_message) % { :tag => tag.name } %>
    <% end %>
  <% elsif current_user.posts.include?(local_assigns[:post]) %>
    <% if local_assigns[:show_untag] %>
      <%= render "post_tags/untag", :post => post, :tag => tag %>
    <% end %>
  <% else %>
    <%= render "post_tags/tag", :post => post, :tag => tag %>
  <% end %>
<% end %>
